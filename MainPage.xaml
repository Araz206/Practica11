<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica11.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center"/>

            <Button Text="Ejercicio Cambio" x:Name="Cambio" Clicked="Cambio_Clicked"/>
            <Button Text="Ejercicio Dino" x:Name="Dino" Clicked="Dino_Clicked"/>
            <Button Text="Ejercicio Gaso" x:Name="Gaso" Clicked="Gaso_Clicked"/>
            <Button Text="Ejercicio Superficie" x:Name="Superficie" Clicked="Superficie_Clicked"/>
            <Button Text="Ejercicio Acerca de nosotros" x:Name="Acerca" Clicked="Acerca_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
