<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica11.Superficie"
             Title="Superficie">

    <StackLayout Padding="20">

        <Image Source="triangulo.png"
            WidthRequest="150"
            HeightRequest="150"/>

        <Label Text="Calculadora de area de un triangulo"
            FontSize="24"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand"/>

        <Entry x:Name="baseEntry" Placeholder="Ingrese la base del triangulo" Keyboard="Numeric"/>
        <Entry x:Name="HeighEntry" Placeholder="Ingrese la altura del triangulo" Keyboard="Numeric"/>

        <Button Text="Calcular Area" Clicked="Button_Clicked"/>

        <Label x:Name="resultLabel"
            FontSize="18"
            HorizontalTextAlignment="Center"
            VerticalOptions="CenterAndExpand"/>
    </StackLayout>
</ContentPage>