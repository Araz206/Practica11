<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica11.Gasolina"
             Title="Gasolina">
    <StackLayout
    Padding="30,0"
    Spacing="25">

        <Image Source="gas.png" 
           HeightRequest="185"
           Aspect="AspectFit"/>
        <Label 
        Text=" Gasolinera "
        FontSize="24"
        HorizontalOptions="CenterAndExpand" 
        Margin="0,30,0,0"/>

        <Entry Placeholder="Cantiad en galones" Keyboard="Numeric" x:Name="GalonesEntry"/>

        <Button Text="Calcular Monto" 
            Clicked="Button_Clicked" 
            HorizontalOptions="CenterAndExpand"
            Margin="0,20,0,0" />

        <Label x:Name="LabMontoAcobrar" Padding="15" FontSize="18" TextColor="AliceBlue" HorizontalOptions="Center" VerticalOptions="Center"/>


    </StackLayout>
</ContentPage>