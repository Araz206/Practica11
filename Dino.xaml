<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica11.Dino"
             Title="Dino">
    <VerticalStackLayout>
        <Label 
            Text="Conversión datos DINO"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Image
             Source="Dino.png"
             HeightRequest="200"
             HorizontalOptions="Center"/>

        <Entry x:Name="entry" 
        Placeholder="Ingrese el nombre del dinusarius"/>

        <Entry x:Name="entry1" 
        Placeholder="Ingrese el peso(kg) del dinosarius"/>

        <Entry x:Name="entry2" 
        Placeholder="Ingrese la altura(mts) del dinusarius"/>

        <Button Text="Convertir" 
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="Convertir_Clicked"/>

        <Entry x:Name="entry3" 
               Placeholder="Conversión de los datos: "/>


    </VerticalStackLayout>
</ContentPage>