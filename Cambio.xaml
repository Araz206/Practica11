<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica11.Cambio"
             Title="Cambio">

    <StackLayout Padding="20">

        <Image Source="compra.png"
            WidthRequest="150"
            HeightRequest="150">
        </Image>


        <Label Text="Costo del articulo:"
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="CenterAndExpand"/>

        <Entry x:Name="CostoArticuloEntry"
            Keyboard="Numeric"
            Placeholder="Ingrese el costo del articulo"/>

        <Label Text="Dinero entregado por el cliente:"
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="CenterAndExpand"/>

        <Entry x:Name="DineroEntregadoEntry"
            Keyboard="Numeric"
            Placeholder="Ingrese el dinero entregado"/>

        <Button Text="Calcular cambio"
             Clicked="Button_Clicked"/>

        <Label x:Name="ResultadoLabel"
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="CenterAndExpand"/>

    </StackLayout>
</ContentPage>